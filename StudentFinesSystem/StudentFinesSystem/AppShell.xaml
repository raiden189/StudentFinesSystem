<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentFinesSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentFinesSystem"
    Shell.FlyoutBehavior="Disabled"
    Title="StudentFinesSystem">

    <FlyoutItem Title="Students" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title="Students"
        ContentTemplate="{DataTemplate local:FinesListPage}"
        Route="StudentsPage"
        Icon="dotnet_bot.png"/>

        <ShellContent
         Title="Fines"
         ContentTemplate="{DataTemplate local:FinesListPage}"
         Route="FinesListPage"
         Icon="dotnet_bot.png"/>
    </FlyoutItem>

</Shell>
